version: "3.7"

services:
  nginx:
    image: nginx:latest
    ports:
      - 80:80 
      - 443:443
    volumes:
      - ./nginx/testing.museumofthefuture.ae:/etc/nginx/conf.d/default.conf
    container_name: proxy
    links:
      - twill 

  twill:
    build:
      context: php
      dockerfile: Dockerfile
    container_name: web

  cache:
    image: redis:latest
    container_name: cache

